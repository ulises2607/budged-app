<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
  <style>
    body {
      font-family: 'Arial', sans-serif;
      background-color: #f0f2f1;
      padding: 20px;
    }

    nav {
      background-color: #3778c2;
      color: white;
      padding: 15px;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .categories-title {
      font-size: 1.5rem;
      display: flex;
      align-self: center;
    }

    .back-icon {
      cursor: pointer;
      height: 1.5rem;
    }

    .container {
      width: 100%;
      margin: 0 auto;
      background-color: #ffffff;
      padding: 20px;
      margin-top: 20px;
      border-radius: 5px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .form-group {
      margin-bottom: 1rem;
    }

    label {
      font-weight: bold;
    }

    input[type="text"] {
      width: 100%;
      padding: 0.375rem 0.75rem;
      margin-top: 5px;
      margin-bottom: 1rem;
      box-sizing: border-box;
      border: 1px solid #ced4da;
      border-radius: 0.25rem;
    }

    input[type="submit"] {
      background-color: #007bff;
      color: #fff;
      padding: 0.75rem 1.25rem;
      border: none;
      border-radius: 0.25rem;
      cursor: pointer;
    }

    input[type="submit"]:hover {
      background-color: #0056b3;
    }
  </style>
<body>

  <nav>
    <%= link_to groups_path do %>
      <%= image_tag("backarrow.png", alt: "logo", class: "back-icon") %>
    <% end %>
    <h1 class="categories-title">NEW CATEGORY</h1>
    <div></div>
  </nav>

  <div class="container">
    <%= form_with(model: @group, method: :post, html: { class: 'd-flex flex-column' }) do |form| %>
      <div class="form-group">
        <%= form.label :name %>
        <%= form.text_field :name, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :icon %>
        <%= form.text_field :icon, class: "form-control" %>
      </div>

      <%= form.hidden_field :user_id, value: current_user.id %>

      <div class="form-group">
        <%= form.submit "ADD CATEGORY", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>

</body>