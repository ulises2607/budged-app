<section class="group-page">
    <nav>
        <%= form_with(url: destroy_user_session_path, method: :delete, local: false) do |form| %>
        <button type="submit" class="nav-link">Logout</button>
      <% end %>
    </nav>
    <h1> Pagina de groups para el user <%=@current_user.name%> </h1>
    <div class="group-card-container" >
    <% @groups.each do |group| %>
        <%= link_to group_payments_path do%>
        <div class="card-container">
            <img src=<%= group.icon%> class="group-icon">
            <div>
                <p> <%= group.name %> </p>
            </div>
        </div>
        <% end %>
    
    <% end %>

    </div>

    <div class="group-button-container">
        <%= link_to "Create a new group", new_group_path  %>
    </div>

</section>


