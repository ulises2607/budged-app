<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
<style>
  body {
    font-family: 'Arial', sans-serif;
    background-color: #f8f9fa;
    padding: 20px;
  }

  nav {
      background-color: #3778c2;
      color: white;
      padding: 15px;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .categories-title {
      font-size: 1.5rem;
      display: flex;
      align-self: center;
    }

    .back-icon {
      cursor: pointer;
      height: 1.5rem;
    }

  .custom-container {
    width: 100%;
    margin: 0 auto;
  }

  .custom-form {
    background-color: #ffffff;
    padding: 20px;
    border-radius: 5px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
  }

  .form-group {
    margin-bottom: 1rem;
  }

  label {
    font-weight: bold;
  }

  .custom-input {
    width: 100%;
    padding: 0.375rem 0.75rem;
    margin-top: 5px;
    margin-bottom: 1rem;
    box-sizing: border-box;
    border: 1px solid #ced4da;
    border-radius: 0.25rem;
  }

  .custom-button {
    background-color: transparent;
    color: #fff;
    padding: 0.75rem 1.25rem;
    border: none;
    border-radius: 0.25rem;
    cursor: pointer;
  }

  .custom-button:hover {
    background-color: #0056b3;
  }
</style>



<section class="custom-container">
<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'custom-form' }) do |f| %>
<nav>
    <%= link_to root_path do %>
      <%= image_tag("backarrow.png", alt: "logo", class: "back-icon") %>
    <% end %>
    <h1 class="categories-title">LOG IN</h1>
    <div><%= f.submit "Log in", class: "custom-button" %></div>
  </nav>
  
    <div class="form-group">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "custom-input" %>
    </div>

    <div class="form-group">
      <%= f.label :password %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: "custom-input" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="form-group">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>
  <% end %>

  <%= render "devise/shared/links" %>
</section>
